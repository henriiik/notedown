{
    "ecmaFeatures": {
        "arrowFunctions": true,
        "blockBindings": true,
        "defaultParams": true,
        "destructing": true,
        "restParams": true,
        "spread": true,
        "templateStrings": true,
        "modules": true,
        "classes": true,
        "objectLiteralShorthandProperties": true,
        "objectLiteralShorthandMethods": true
    },
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true
    },
    "globals": {
        "angular": false,
        "System": false,
        "inject": false
    },
    "rules": {
        "semi": [2, "always"],
        "no-bitwise": 2,
        "no-use-before-define": [2, "nofunc"],
        "dot-notation": 2,
        "quotes": [2, "single"],
        "strict": [2, "function"],
        "indent": [2, 4],
        "brace-style": [2, "1tbs"],
        "comma-style": [2, "last"],
        "key-spacing": [2, {
            "beforeColon": false,
            "afterColon": true
        }],
        "no-multiple-empty-lines": [2, {
            "max": 2
        }],
        "space-after-keywords": [2, "always"],
        "space-before-blocks": [2, "always"],
        "space-before-function-parentheses": [2, {
            "anonymous": "always",
            "named": "never"
        }],
        "space-in-parens": [2, "never"],
        "max-len": [2, 100, 4]
    }
}
