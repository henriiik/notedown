div(flex-sm="100" flex-gt-sm="80" offset-gt-sm="10" layout-sm="column" layout-gt-md="row")
    md-card(flex-sm="100" flex-gt-sm="50" ng-if="vm.userId && (vm.userId === vm.note.user.id || !vm.note.user.id)")
        md-card-content
            md-input-container
                label Content
                textarea(ng-model="vm.note.content" ng-change="vm.note.updateHtml()")
            md-checkbox(ng-model="vm.note.public") Public
        div.md-actions(layout="row" layout-align="end center")
                md-button(ui-sref="list") Cancel
                md-button.md-warn(ng-if="vm.note.id" ng-click="vm.deleteNote()") Delete
                md-button.md-primary(ng-click="vm.saveNote()") Save
    md-card(flex-sm="100" flex-gt-sm="50" ng-if="vm.note" nd-note="vm.note")
